{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "node", "@cloudflare/vitest-pool-workers"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*", 
    "test/**/*", 
    "worker-configuration.d.ts"
  ],
  "exclude": ["node_modules"]
}
